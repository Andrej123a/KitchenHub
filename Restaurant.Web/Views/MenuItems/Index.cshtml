@model IEnumerable<Restaurant.Domain.Entities.MenuItem>
@{
    ViewData["Title"] = "Menu Items";
    var total = Model?.Count() ?? 0;
    var availableCount = Model?.Count(x => x.IsAvailable) ?? 0;

    Guid? filterCategoryId = ViewBag.FilterCategoryId as Guid?;
    string filterCategoryName = ViewBag.FilterCategoryName as string;
    bool hasCategory = filterCategoryId.HasValue;
}

<div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3 mb-4">
    <div>
        <h2 class="mb-1 fw-semibold">
            Menu Items
            @if (hasCategory)
            {
                <span class="badge rounded-pill ms-2 category-badge">
                    @filterCategoryName
                </span>
            }
        </h2>

        <div class="text-muted small">
            @total items • @availableCount available
        </div>
    </div>

    <div class="d-flex flex-wrap gap-2 align-items-center">
        <div class="input-group searchbox">
            <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
            <input id="q" type="text" class="form-control" placeholder="Search items...">
        </div>

        <select id="avail" class="form-select w-auto">
            <option value="all">All</option>
            <option value="yes">Available</option>
            <option value="no">Unavailable</option>
        </select>

        <!-- ✅ IMPORTANT: pass categoryId when filtered -->
        <a class="btn btn-primary d-flex align-items-center gap-2"
           asp-action="Create"
           asp-route-categoryId="@(hasCategory? filterCategoryId : null)">
            <i class="bi bi-plus-lg"></i>
            <span>Create New Item</span>
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="empty-state text-center p-5 border rounded-4 bg-white">
        <div class="display-6 mb-2"><i class="bi bi-card-list"></i></div>
        <h5 class="mb-2">No menu items yet</h5>
        <p class="text-muted mb-4">Add your first item to the menu.</p>

        <!-- ✅ IMPORTANT: pass categoryId here too -->
        <a class="btn btn-primary"
           asp-action="Create"
           asp-route-categoryId="@(hasCategory? filterCategoryId : null)">
            <i class="bi bi-plus-lg me-2"></i>Create New Item
        </a>
    </div>
}
else
{
    <div class="row g-3" id="cards">
        @foreach (var i in Model)
        {
            var availText = i.IsAvailable ? "Available" : "Unavailable";
            var availClass = i.IsAvailable ? "bg-success" : "bg-secondary";
            var category = i.Category?.Name ?? "—";

            <div class="col-12 col-md-6 col-lg-4 mi-card"
                 data-name="@i.Name.ToLower()"
                 data-category="@category.ToLower()"
                 data-avail="@(i.IsAvailable ? "yes" : "no")">

                <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden card-hover">

                    <!-- IMAGE -->
                    <div class="position-relative">
                        <img src="@(string.IsNullOrWhiteSpace(i.ImageUrl)
                                                                     ? "https://via.placeholder.com/600x400?text=Food"
                                                                     : i.ImageUrl)"
                     class="w-100"
                     style="height:180px;object-fit:cover;"
                     alt="@i.Name"
                     onerror="this.onerror=null;this.src='https://via.placeholder.com/600x400?text=No+Image';" />

                        <!-- ACTIONS OVERLAY -->
                        <div class="position-absolute top-0 end-0 p-2 d-flex gap-1 card-actions">
                            <a class="btn btn-sm btn-light" asp-action="Details" asp-route-id="@i.Id" title="Details">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a class="btn btn-sm btn-light" asp-action="Edit" asp-route-id="@i.Id" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a class="btn btn-sm btn-light text-danger" asp-action="Delete" asp-route-id="@i.Id" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>

                    <!-- BODY -->
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="card-title mb-1">@i.Name</h5>
                            <span class="badge rounded-pill @availClass">@availText</span>
                        </div>

                        <div class="text-muted small mb-2">
                            <i class="bi bi-tag me-1"></i>@category
                        </div>

                        <div class="price-badge fs-6">$@i.Price.ToString("0.00")</div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Styles {
    <style>
        .searchbox {
            min-width: 260px;
        }

        .card-hover {
            transition: transform .15s ease, box-shadow .15s ease;
        }

            .card-hover:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 32px rgba(0,0,0,.08);
            }

        .card-actions {
            opacity: 0;
            transition: opacity .15s ease;
        }

        .card-hover:hover .card-actions {
            opacity: 1;
        }

        .price-badge {
            display: inline-block;
            padding: .4rem .7rem;
            border-radius: 999px;
            background: rgba(13,110,253,.10);
            color: #0d6efd;
            font-weight: 600;
        }

        .empty-state {
            max-width: 560px;
            margin: 0 auto;
        }

        .category-badge {
            background: rgba(201,162,77,.16);
            border: 1px solid rgba(201,162,77,.40);
            color: #c9a24d;
            font-weight: 600;
        }
    </style>
}

@section Scripts {
    <script>
        (function () {
            const q = document.getElementById('q');
            const avail = document.getElementById('avail');
            const cards = document.querySelectorAll('.mi-card');

            function applyFilter() {
                const term = (q.value || '').trim().toLowerCase();
                const a = avail.value;

                cards.forEach(c => {
                    const name = c.getAttribute('data-name') || '';
                    const cat = c.getAttribute('data-category') || '';
                    const ra = c.getAttribute('data-avail') || '';

                    const matchTerm = !term || name.includes(term) || cat.includes(term);
                    const matchAvail = (a === 'all') || (ra === a);

                    c.style.display = (matchTerm && matchAvail) ? '' : 'none';
                });
            }

            q?.addEventListener('input', applyFilter);
            avail?.addEventListener('change', applyFilter);
        })();
    </script>
}
