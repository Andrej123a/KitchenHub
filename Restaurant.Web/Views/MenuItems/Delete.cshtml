@model Restaurant.Domain.Entities.MenuItem
@{
    ViewData["Title"] = "Delete Menu Item";
}

<h2>Delete Menu Item</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this menu item?
</div>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price.ToString("0.00")</dd>

    <dt class="col-sm-2">Available</dt>
    <dd class="col-sm-10">@(Model.IsAvailable ? "Yes" : "No")</dd>

    <dt class="col-sm-2">CategoryId</dt>
    <dd class="col-sm-10">@Model.CategoryId</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
